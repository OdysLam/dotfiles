#!/bin/sh

uid="$(id -u $USER)"
gid="$(id -g $USER)"

mountpoint=${MOUNTPOINT-/home/plex}
mkdir -p $mountpoint

fusermount -u $mountpoint 2>/dev/null

sshfs $SEEDBOX_URI \
	"$mountpoint" \
	-oumask=555   \
	-ogid="$gid"  \
	-oallow_other \
	-oauto_cache  \
	-ouid="$uid"  \
	-oreconnect,ServerAliveInterval=15,ServerAliveCountMax=3,Compression=no,Cipher=arcfour

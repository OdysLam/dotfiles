#!/bin/sh

internal=eDP-1
external1=DP-1
external2=DP-2
output="$(xrandr)"

if echo "$output" | grep -P "\b$external1 connected\b"; then
  xrandr --output "$internal" --off --output "$external1" --auto --primary
elif echo "$output" | grep -P "\b$external2 connected\b"; then
  xrandr --output "$internal" --off --output "$external2" --auto --primary
else
  xrandr --output "$external1" --off --output "$internal" --auto --primary
  xrandr --size 1920x1080
fi

feh --bg-fill ~/images/background

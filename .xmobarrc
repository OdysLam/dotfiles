-- Xmobar configuration
-- vim: ft=haskell

Config {
       font = "xft:monospace:size=12,fallback:size=12"
     , textOffset = 18
     , borderColor = "black"
     , border = TopB
     , bgColor = "#000000"
     , fgColor = "#777777"
     , position = Bottom
     , persistent = True
     , verbose = True,
     , commands =
          [ Run StdinReader
          , Run MultiCpu       [ "--template", "<total0> <total1> <total2> <total3>", "-w", "3" ] 50
          , Run Memory         [ "--template", "<available>" ] 50
          , Run Date           "%b %d %H:%M" "date" 10
          , Run DiskU          [("/", "<free>"), ("/home", "<free>")] [] 20
          , Run CommandReader  "xmobar-unison-status" "unison"
          , Run Com            "todo-widget" [] "todo" 10
          , Run Com            "xmobar-brightness" [] "brightness" 10
          , Run Wireless       "wlp2s0" [ "--template", "<essid>/<fc=#666><quality></fc>"] 10
          , Run Battery        [ "--template", "<fc=#555>⌁</fc> <left>" ] 100
          ]
     , sepChar = "%"
     , alignSep = "}{"
     , template = " %StdinReader% }{ %unison%   %todo%   <fc=#555>☀</fc> %brightness%   %battery%   %wlp2s0wi%   %disku%   %memory%   %multicpu%   <fc=#aaaaaa>%date%</fc> "
}

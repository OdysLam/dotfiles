-- Xmobar configuration

Config {
       font = "xft:Inconsolata:size=14,monospace:size=12"
     , borderColor = "black"
     , border = TopB
     , bgColor = "black"
     , fgColor = "#AA0000"
     , position = TopW L 100
     , commands = [ Run DynNetwork [ "--template", "<dev> <tx> <rx>", "-w", "7", "-S", "True" ] 10
                  , Run MultiCpu   [ "--template", "<total0>% <total1>% <total2>% <total3>%", "-w", "3" ] 50
                  , Run Memory     [ "--template", "<usedratio>%" ] 10
                  , Run Date       "%a %b %d %Y %H:%M:%S" "date" 10
                  , Run DiskU      [("/", "<used>/<size>"), ("/home", "<used>/<size>")] [] 20
                  , Run Com        "xmobar-dropbox-status" [] "dropbox" 10
                  , Run Com        "seedbox-status" [] "seedbox" 1
                  , Run CoreTemp   [ "--template", "<core0>° <core1>° <core2>° <core3>°" ] 50
                  , Run StdinReader
                  ]
     , sepChar = "%"
     , alignSep = "}{"
     , template = "%StdinReader%  }{┊ %seedbox% ┊  %dropbox%  ┊ %coretemp% ┊ %multicpu%  ┊  %memory%  ┊  %disku% ┊  %dynnetwork%  ┊  <fc=#aa0000>%date%</fc> "
}
